#include <stdio.h>

int main() {
    // Declare variables
    float num1, num2, sum;

    // Get input from the user
    printf("Enter the first number: ");
    scanf("%f", &num1);

    printf("Enter the second number: ");
    scanf("%f", &num2);

    // Perform addition
    sum = num1 + num2;

    // Display the result
    printf("The sum of %f and %f is %f\n", num1, num2, sum);

    return 0;
}
